{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"allowJs": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"lib": ["ES2020", "DOM"],
		"types": ["node", "astro/client"],
		"skipLibCheck": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
